{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "watch": true
    },
    "atom": {
        "rewriteTsconfig": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "js/components/app.ts",
        "js/components/login-form.ts",
        "js/components/main.ts",
        "js/components/top-menu.ts",
        "js/entity/abstract-entity.ts",
        "js/entity/audited-entity.ts",
        "js/entity/gas-log.ts",
        "js/entity/login.ts",
        "js/index.ts",
        "js/services/session-service.ts",
        "typings/tsd.d.ts"
    ]
}
